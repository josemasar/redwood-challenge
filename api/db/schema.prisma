model Idea {
  id           Int      @id @default(autoincrement())
  opps         Boolean
  product      String
  system       String
  partNum      String
  vendor       String
  title        String
  body         String
  value        Int
  author       String
  active       Boolean  @default(false)
  plannedStart DateTime
  plannedEnd   DateTime
  finish       Boolean  @default(false)
  createdAt    DateTime @default(now())
}
